{
  "name": "@oceanview/server",
  "version": "0.0.1",
  "type": "module",
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:no-prisma": "tsx watch src/index.ts",
    "db:generate": "prisma generate --schema=../../prisma/schema.prisma",
    "db:seed": "prisma db seed",
    "db:migrate": "prisma migrate deploy --schema=../../prisma/schema.prisma",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "build": "rm -rf dist && tsc",
    "clean": "find src -name \"*.js\" -type f ! -path \"src/bots/hypertrades/*\" ! -path \"src/db.js\" -delete && echo 'Removed JS duplicates!'",
    "start": "node dist/src/index.js",
    "start:docker": "prisma migrate deploy --schema=../../prisma/schema.prisma && prisma db seed && node dist/src/index.js",
    "prepare": "concurrently \"pnpm run clean\" \"tsc\"",
    "test-multi-asset": "tsx test-multi-asset.ts"
  },
  "dependencies": {
    "@fastify/websocket": "^8.2.0",
    "@prisma/client": "^5.22.0",
    "fastify": "^4.26.0",
    "ioredis": "^5.4.1",
    "node-fetch": "^3.3.2",
    "onnxruntime-node": "1.17.3",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@types/ioredis-mock": "^8.2.6",
    "@types/jest": "^29.5.3",
    "@types/node": "^22.15.21",
    "@types/node-fetch": "^3.0.3",
    "@types/pino": "^7.0.5",
    "concurrently": "^8.2.0",
    "dotenv": "^16.5.0",
    "ioredis-mock": "^8.9.0",
    "jest": "^29.7.0",
    "prisma": "^5.22.0",
    "ts-jest": "^29.1.1"
  }
}