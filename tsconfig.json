{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "declaration": true,
    "allowJs": true,
    "isolatedModules": true
  },
  "include": ["packages/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules"]
} 